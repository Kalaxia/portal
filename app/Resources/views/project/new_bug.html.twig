
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/project.css') }}" />
{% endblock %}

{% block body %}
    <div id="feedback-form">
        <h2>{{ 'project.feedback.report_bug' | trans }}</h2>
        <form method="post" action="{{ path('create_bug') }}">
            <input type="text" name="title" placeholder="{{ 'project.feedback.title' | trans }}" />
            <textarea name="description"></textarea>
            <button type="submit">{{ 'project.feedback.create' | trans }}</button>
        </form>
    </div>
{% endblock %}
